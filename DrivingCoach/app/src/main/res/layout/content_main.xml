<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="starthack.drivingcoach.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/MAIN_Login"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:minHeight="200dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            android:layout_margin="8dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignBounds"
                android:paddingStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:layout_margin="8dp"
                        android:layout_column="0"
                        android:layout_row="0"/>
                    <EditText
                        android:id="@+id/LOGIN_Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="MyPseudo"
                        android:layout_margin="8dp"
                        android:layout_column="1"
                        android:layout_row="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail adress"
                        android:layout_margin="8dp"
                        android:layout_column="0"
                        android:layout_row="1"/>
                    <EditText
                        android:id="@+id/LOGIN_Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="abc@def.gh"
                        android:layout_margin="8dp"
                        android:layout_column="1"
                        android:layout_row="1"/>
            </GridLayout>
            <Button
                android:text="Log In"
                android:layout_gravity="end|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:minWidth="88dp"
                android:minHeight="48dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorPrimary"
                android:onClick="login"
                style="?android:attr/borderlessButtonStyle"/>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/MAIN_Historic"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:minHeight="200dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                android:layout_margin="8dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="top|end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily stats"
                        android:textSize="16sp"
                        android:minWidth="88dp"
                        android:minHeight="48dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorPrimary"/>

                    <GridLayout
                        android:alignmentMode="alignBounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:columnCount="2"
                        android:rowCount="5"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:paddingTop="8dp">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="start"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time driving"
                            android:layout_column="0"
                            android:layout_row="0"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="start"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:layout_column="0"
                            android:layout_row="1"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="start"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max error"
                            android:layout_column="0"
                            android:layout_row="2"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="start"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Where"
                            android:layout_column="0"
                            android:layout_row="3"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="start"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ecological"
                            android:layout_column="0"
                            android:layout_row="4"/>


                        <!--TODO: For now sample values-->
                        <TextView
                            android:id="@+id/DAILY_time"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:layout_gravity="end"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h32m"
                            android:layout_column="1"
                            android:layout_row="0"/>
                        <TextView
                            android:id="@+id/DAILY_distance"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:layout_gravity="end"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120km"
                            android:layout_column="1"
                            android:layout_row="1"/>
                        <TextView
                            android:id="@+id/DAILY_worse"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:layout_gravity="end"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+12km/h"
                            android:layout_column="1"
                            android:layout_row="2"/>
                        <TextView
                            android:id="@+id/DAILY_where"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:layout_gravity="end"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DufourStrasse"
                            android:layout_column="1"
                            android:layout_row="3"/>
                        <TextView
                            android:id="@+id/DAILY_ecology"
                            android:textStyle="bold"
                            android:layout_marginBottom="24dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:layout_gravity="end"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No data"
                            android:layout_column="1"
                            android:layout_row="4"/>
                    </GridLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/MAIN_ScoreCardView"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:minHeight="200dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_gravity="top|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Overall Score"
                    android:textSize="16sp"
                    android:minWidth="88dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/MAIN_ScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No infos"
                    android:textStyle="bold"
                    android:textSize="28sp"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
